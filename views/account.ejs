<!DOCTYPE html>

<html
  lang="en"
  class="light-style layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="../assets/"
  data-template="vertical-menu-template-free"
>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"
    />

    <title> Deposit into your account </title>
    <!-- headLinks -->
  <%- include("./partials/headLinks.ejs") -%>
  <!-- ### headLinks ### -->
    <style>
    .app-brand-logo img, .app-brand-logo svg {
    display: block;
    width: 40px;
    margin: 0 auto;
    }
    h1.massive{
        font-size: 5em;
    }
    </style>
  </head>

  <body class="body-linear">

    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include("./partials/sidenav.ejs") -%>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

          <nav
            class="layout-navbar container-xxl navbar navbar-expand-xl navbar-detached align-items-center bg-navbar-theme card-color"
            id="layout-navbar"
          >
            <div class="layout-menu-toggle navbar-nav align-items-xl-center ms-auto me-xl-0 d-xl-none">
              <a class="nav-item nav-link px-0 me-xl-4" href="javascript:void(0)">
                <i class="bx bx-menu bx-sm text-white"></i>
              </a>
            </div>
          </nav>

          <!-- / Navbar -->
          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->
            <div class="container-xxl flex-grow-1 container-p-y">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-8">
                <% if(messages.error){ %>
                  <% console.log(messages) %>
                  <div class="alert alert-primary alert-dismissible move" role="alert" id="myAlert">
                      <%= messages.error %>
                    </div>
                    <script>
                setTimeout(function () {
                return myAlert.classList.remove("move");
                }, 3000);
                    </script>
                <% } %>
                        <div class="col-xl">
                            <div class="card mb-4">
                              <div class="card-header d-flex justify-content-between align-items-center">
                                <h5 class="mb-0"> Account settings</h5>
                              </div>
                              <div class="card-body">
                                <form method="POST">
                                  <div class="mb-3">
                                    <label class="form-label" for="basic-icon-default-fullname">Name</label>
                                    <div class="input-group input-group-merge">
                                      <span id="basic-icon-default-fullname2" style="background-color: #eceef1;" class="input-group-text"><i class="bx bx-user"></i></span>
                                      <input type="text" class="form-control" id="basic-icon-default-fullname" disabled value="<%= user.firstName %> <%= user.lastName %>" aria-label="<%= user.firstName %> <%= user.lastName %>" aria-describedby="basic-icon-default-fullname2">
                                    </div>
                                  </div>
                                  <div class="mb-3">
                                    <label class="form-label" for="basic-icon-default-company">Wallet Address</label>
                                    <div class="input-group input-group-merge">
                                      <span id="basic-icon-default-company2" class="input-group-text"><i class="bx bx-buildings"></i></span>
                                      <input type="text" name="walletAddress" id="basic-icon-default-company" class="form-control" placeholder="your wallet Address for withdrawal" value="<%= user.walletAddress %>"  aria-describedby="basic-icon-default-company2">
                                    </div>
                                  </div>
                                  <div class="mb-3">
                                    <label class="form-label" for="basic-icon-default-email">Email</label>
                                    <div class="input-group input-group-merge">
                                      <span class="input-group-text"><i class="bx bx-envelope"></i></span>
                                      <input type="email" name="email" id="basic-icon-default-email" class="form-control" required value="<%= user.email %>" aria-label="<%= user.email %>" aria-describedby="basic-icon-default-email2">
                                    </div>
                                  </div>
                                  <div class="mb-3">
                                    <label class="form-label" for="basic-icon-default-email">Password</label>
                                    <div class="input-group input-group-merge">
                                      <span class="input-group-text"><i class="bx bx-key"></i></span>
                                      <input type="text" name="password" id="basic-icon-default-email" class="form-control" required value="<%= user.password %>" aria-describedby="basic-icon-default-email2">
                                    </div>
                                  </div>
                                  <button type="submit" class="btn btn-primary ms-auto">Update</button>
                                </form>
                              </div>
                            </div>
                          </div>
                     </div>
                     <div class="col-md-10 col-lg-8">
                      <div class="col-xl">
                          <div class="card mb-4">
                            <div class="card-header d-flex justify-content-between align-items-center">
                              <h5 class="mb-0"> Account information</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                  <label class="form-label" for="basic-icon-default-fullname8"> Referral Link </label>
                                  <div class="input-group input-group-merge">
                                    <input type="text" class="form-control" id="basic-icon-default-fullname8" disabled value="https://customdomain_name/register/<%= user._id %>" aria-label="list of refferals" aria-describedby="basic-icon-default-fullname2">
                                  </div>
                                </div>
                                <div class="mb-3">
                                  <label class="form-label" for="basic-icon-default-fullname7">List of Referral </label>
                                  <div class="input-group input-group-merge">
                                    <input type="number" class="form-control" id="basic-icon-default-fullname7" disabled value="<%= user.referrals.length %>" aria-label="list of refferals" aria-describedby="basic-icon-default-fullname2">
                                  </div>
                                </div>
                            </div>
                          </div>
                        </div>
                   </div>
                    </div>
                </div>
            </div>
            <!-- / Content -->
            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->

    	<%- include("./partials/footerLinks.ejs") -%>
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
  </body>
</html>
