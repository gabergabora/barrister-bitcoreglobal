<style>
  .bg-color{
    background-color: rgba(187, 255, 0, 0.233) !important;
  }
</style>
<% shorts = shorts ? shorts : {amount : 0} %>        
<div class="card card-color">
    <div class="card-body">
      <div class="card-title d-flex align-items-start justify-content-between">
        <div class="avatar flex-shrink-0">
          <i class='bx bxs-up-arrow-alt text-success bg-color'></i>
        </div>
        <div class="dropdown">
          <button
            class="btn p-0"
            type="button"
            id="cardOpt6"
            data-bs-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >
            <i class="bx bx-dots-vertical-rounded"></i>
          </button>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt6">
              <a class="dropdown-item justify-content-between d-flex" href="javascript:void(0);">
                  hide
                    <div class="text-end">
                      <div class="form-check form-switch">
                        <input class="form-check-input hide-amount" data-target="#R-inv" type="checkbox" role="switch">
                      </div>
                    </div>
                  </a>
          </div>
        </div>
      </div>
      <script>
        console.log("<%=difference(new Date(), new Date(shorts.expiry))%>")
      </script>
      <span class="fw-semibold d-block mb-2">Running Plans </span>
      <h3 class="card-title text-nowrap mb-1 control-color" id="R-inv" data-amount="<%=shorts.amount %>" ><%= shorts.amount.toLocaleString("en-US", { style: "currency", currency: "USD" }) || '0.00' %> </h3>
      <!-- <small class="text-success fw-semibold"><i class="bx bx-up-arrow-alt"></i> +28.42%</small> -->
      <div class="d-flex justify-content-between">
        <% if(shorts.profit){ %>
          <p class="text-success mb-0"> + $<%= shorts.profit %></p>
          <p class="text-info mb-0"> <%= format(shorts.expiry, 'dd/MM/y') %></p>
       <% } %>
      </div>
    </div>
  </div>