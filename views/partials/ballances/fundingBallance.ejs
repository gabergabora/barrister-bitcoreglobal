<div class="card card-color" >
    <div class="card-body">
      <div class="card-title d-flex align-items-start justify-content-between">
        <div class="avatar flex-shrink-0">
            <img
            src="../assets/img/icons/unicons/wallet-info.png"
            alt="Credit Card"
            class="rounded"
          />
        </div>
        <div class="dropdown">
          <button
            class="btn p-0"
            type="button"
            id="cardOpt3"
            data-bs-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false"
          >
            <i class="bx bx-dots-vertical-rounded"></i>
          </button>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt3">
            <a class="dropdown-item justify-content-between d-flex" href="javascript:void(0);">
                hide
                  <div class="text-end">
                    <div class="form-check form-switch">
                      <input class="form-check-input hide-amount" data-target="#ballance" type="checkbox" role="switch">
                    </div>
                  </div>
                </a>
          </div>
        </div>
      </div>
      <span class="fw-semibold d-block mb-1">Funding Balance</span>
      <h3 class="card-title mb-2 control-color" id="ballance" data-amount='<%= user.fundingBallance %>'><%= user.fundingBallance.toLocaleString("en-US", { style: "currency", currency: "USD" }) %></h3>
    </div>
  </div>